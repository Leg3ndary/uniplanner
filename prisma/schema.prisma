datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id           String          @id @default(auto()) @map("_id") @db.ObjectId
  email        String          @unique
  name         String
  grades       Grade[]
  applications ApplicationId[]
  Application  Application[]
}

model Application {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  slug             String            @unique
  title            String
  questions        Question[]
  extracurriculars Extracurricular[]
  awards           Award[]
  deadline         DateTime?
  user             User              @relation(fields: [userId], references: [id])
  userId           String            @db.ObjectId
  ApplicationId    ApplicationId[]
}

model ApplicationId {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String      @db.ObjectId
  user          User        @relation(fields: [userId], references: [id])
  userId        String      @db.ObjectId
}

type Question {
  question  String
  answer    String
  limitType String?
  limit     Int?
  completed Boolean
}

type Grade {
  course String
  level  String
  code   String
  mark   Int?
  grade  Int
}

type Extracurricular {
  title       String
  startDate   DateTime
  endDate     DateTime?
  description String
  type        String
  reference   String
}

type Award {
  title       String
  date        DateTime
  description String
  reference   String
  ranking     Int?
  score       Int?
}
