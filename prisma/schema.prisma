datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  email       String        @unique
  name        String
  tier        Tier          @default(Free)
  grades      Grade[]
  Application Application[]
}

model Application {
  application_id   String            @id @default(auto()) @map("_id") @db.ObjectId
  slug             String            @unique
  title            String
  university       String
  program          String
  status           AppStatus         @default(Incomplete)
  questions        Question[]
  extracurriculars Extracurricular[]
  awards           Award[]
  deadline         DateTime?
  user             User              @relation(fields: [userId], references: [id])
  userId           String            @db.ObjectId
}

type Question {
  question  String
  answer    String
  limitType LimitType @default(None)
  limit     Int?
  completed Boolean
}

type Grade {
  course String
  level  String
  code   String
  mark   Int?
  grade  Int
  credit Int
  year   Int
}

type Extracurricular {
  title       String
  startDate   DateTime
  endDate     DateTime?
  description String
  type        String
  reference   String
}

type Award {
  title       String
  date        DateTime
  description String
  reference   String
  ranking     Int?
  score       Int?
}

enum LimitType {
  None
  Word
  Character
  Paragraph
}

enum AppStatus {
  Incomplete
  Submitted
  Accepted
  Rejected
  Waitlisted
  Deferred
  Withdrawn
  Pending
}

enum Tier {
  Free
  Basic
  Premium
  Enterprise
}
